generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ApplicationStatus {
  APPLIED
  INTERVIEW
  REJECTED
  OFFER
}

model JobApplication {
  id           String            @id @default(uuid())
  company      String
  position     String
  status       ApplicationStatus
  appliedDate  DateTime
  location     String
  tags         String[]
  notes        String?
  url          String?
  createdAt    DateTime          @default(now())
}
